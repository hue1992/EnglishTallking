<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="70dp"
    android:layout_height="20dp"
    android:background="@drawable/bg_available">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_fiber_manual_record_black_18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:tint="@color/cc_status_available_text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grade"
        android:text="@string/cc_status_available"
        android:textColor="@color/cc_status_available_text"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginRight="5dp" />
</LinearLayout>