<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="50dp"
    android:layout_height="18dp"
    android:background="@drawable/bg_busy">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_fiber_manual_record_black_18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:tint="@color/colorDeactivate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grade"
        android:text="Busy"
        android:textColor="@color/colorDeactivate"
        android:textSize="10sp"
        android:gravity="center" />
</LinearLayout>